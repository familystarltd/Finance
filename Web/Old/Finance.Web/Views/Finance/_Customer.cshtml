@model FinanceManagement.Web.Model.CustomerModel
@if (Model != null)
{
    <div class="row content" style="margin:0px;padding:0px;">
        <div class="col-md-2" style="width: 140px; padding: 0px; margin: 0px;">
            @if (Model.PersonalInfo.PictureRawPhoto == null || Model.PersonalInfo.PictureRawPhoto.Length <= 0)
            {
                <div style="width:100px;">
                    @switch (Model.PersonalInfo.Gender)
                    {
                        case FinanceManagement.Web.Model.GenderType.Male:
                            <img src="~/Content/Images/male.png" style="width: 128px; height: 128px; " />
                            break;
                        case FinanceManagement.Web.Model.GenderType.Female:
                        <img src="~/Content/Images/female.png" style="width: 128px; height: 128px; " />
                            break;
                        default:
                        <img src="~/Content/Images/nophoto.png" style="width: 128px; height: 128px; " />
                            break;
                    }
                </div>
            }
            else
            {
                <div style="width: 128px;">
                    @Html.Image(Model.PersonalInfo.FullName, 128, 128, Model.PersonalInfo.PictureRawPhoto)
                </div>
            }
        </div>
        <div class="col-md-10" style="padding:0px;margin:0px;">
            <div class="row">
                <div class="col-md-1" style="width: 180px;">
                    Business
                </div>
                <div class="col-md-2" style="width:10px;">
                    :
                </div>
                <div class="col-md-5">
                    @Model.Business.Name
                </div>
            </div>
            <div class="row">
                <div class="col-md-1" style="width: 180px;">
                    Ref
                </div>
                <div class="col-md-2" style="width:10px;">
                    :
                </div>
                <div class="col-md-5">
                    @Model.Ref
                </div>
            </div>
            <div class="row">
                <div class="col-md-1" style="width: 180px;">
                    Active Date
                </div>
                <div class="col-md-2" style="width:10px;">
                    :
                </div>
                <div class="col-md-5">
                    @Model.ActiveDate.ToString("dd MMMM yyyy")
                </div>
            </div>
            @*<div class="row">
                    <div class="col-md-1" style="width: 180px;">
                        Date of Birth
                    </div>
                    <div class="col-md-2" style="width:10px;">
                        :
                    </div>
                    <div class="col-md-5">
                        @Model.DateOfBirth.ToString("dd/MM/yyyy")
                    </div>
                </div>*@
        </div>
    </div>
}